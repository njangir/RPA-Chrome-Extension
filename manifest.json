{
  "manifest_version": 3,
  "name": "Flow Recorder & Player (Enhanced)",
  "version": "0.4.0",
  "description": "Enhanced RPA recorder with improved cross-site compatibility, better element detection, and robust error handling. Works across SPAs, shadow DOM, and dynamic content.",
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "tabs",
    "sidePanel",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open Enhanced Recorder"
  },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "enhanced-common.js",
        "enhanced-recorder.js",
        "enhanced-player.js",
        "debug-extension.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
